# Use Node.js 22 for Discord Bot
FROM node:22-alpine

# Set working directory
WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci --only=production

# Copy application code
COPY . .

# No ports exposed (Discord bot doesn't need HTTP)

# Create volume mount point for logs
VOLUME ["/app/logs"]

# Run Discord bot
CMD ["npm", "run", "bot"]
